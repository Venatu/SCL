<UserControl x:Class="Venatu.SCL.UI.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Venatu.SCL.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFE5E5E5">
        <TextBox x:Name="ProjectName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding ProjectName}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox" Height="79" Margin="10,38,10,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid" Margin="10,122,10,10" ItemsSource="{Binding Revisions}" AutoGenerateColumns="False" RowEditEnding="dataGrid_RowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="10*"/>
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="60*"/>
                <DataGridTextColumn Binding="{Binding Date}" Header="Date" Width="30*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
